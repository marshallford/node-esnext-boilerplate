{
  "name": "node-esnext-boilerplate",
  "version": "1.0.0",
  "description": "An opinionated, but ideally up to date NodeJS project boilerplate with ESnext support",
  "main": "src/server.js",
  "engines": {
    "node": ">=6.0.0"
  },
  "private": true,
  "scripts": {
    "lint": "better-npm-run lint",
    "precommit": "better-npm-run precommit",
    "dev": "better-npm-run dev",
    "prestart": "better-npm-run prestart",
    "start": "better-npm-run start"
  },
  "betterScripts": {
    "lint": {
      "command": "eslint src",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "precommit": {
      "command": "eslint src",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "dev": {
      "command": "nodemon --exec babel-node src/server.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "prestart": {
      "command": "rimraf dist && babel --source-maps inline --copy-files src --out-dir dist",
      "env": {
        "NODE_ENV": "production",
        "BABEL_ENV": "production"
      }
    },
    "start": {
      "command": "node dist/server.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marshallford/node-esnext-boilerplate.git"
  },
  "author": "Marshall Ford <inbox@marshallford.me> (https://marshallford.me/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marshallford/node-esnext-boilerplate/issues"
  },
  "homepage": "https://github.com/marshallford/node-esnext-boilerplate#readme",
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-root-import": "^4.0.1",
    "better-npm-run": "0.0.10",
    "eslint": "^3.1.1",
    "eslint-config-standard": "^5.3.5",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-promise": "^2.0.0",
    "eslint-plugin-standard": "^2.0.0",
    "husky": "^0.11.6",
    "nodemon": "^1.10.0",
    "rimraf": "^2.5.4"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "cors": "^2.7.1",
    "express": "^4.14.0",
    "winston": "^2.2.0"
  }
}
